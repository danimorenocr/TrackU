<!-- views/userDashboard.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard <%= user.name %>
    </title>
    <link rel="icon" href="/img/logo.png" type="image/png" />
    <link rel="stylesheet" href="/css/userDashboard.css">
</head>

<body>

    <!-- Inicio: Barra de navegación -->
    <nav>
        <div>
            <a href="#">
                <img src="/img/TrackU.png" alt="logo.png" class="imagen-logo" />
            </a>
        </div>
        <ul>
            <li>
                <a href="/profile/edit" class="botones">Editar mi información</a>
            </li>
            <li class="cerrar-sesion-container" <form action="/logout" method="POST" style="display:inline;">
                <a href="/logout" class="cerrar-sesion">Cerrar Sesión</a>
                </form>
            </li>
        </ul>
    </nav>
    <!-- Fin: Barra de navegación -->


    <div class="container">
        <h1>Entregas del Proyecto: <%= projectId %>
        </h1>

        <table>
            <thead>
                <tr>
                    <th>Código de Entrega</th>
                    <th>Nombre de la Entrega</th>
                    <th>Fecha de Entrega</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (entregas && entregas.length> 0) { %>
                    <% entregas.forEach(function(entrega) { %>
                        <tr>
                            <td>
                                <%= entrega.code || "Sin código" %>
                            </td>
                            <td>
                                <%= entrega.name || "Sin nombre" %>
                            </td>
                            <td>
                                <%= entrega.delivery_date || "Sin fecha" %>
                            </td>
                            <td>
                                <!-- Botón o enlace para ver más detalles de la entrega -->
                                <a href="/entrega/<%= entrega.id %>" class="btn btn-info">Ver Detalles</a>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" style="text-align: center;">No hay entregas asociadas a este
                                        proyecto.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>

    </div>

    <!-- FOOTER -->
    <footer>
        <div class="contenedor-pie">

            <div class="seccion-pie">
                <h4>
                    Contacto
                </h4>
                <p class="seccion-pie">Teléfono: 456789</p>
                <p class="seccion-pie">Dirección: Avenida Universitaria</p>
            </div>
            <div class="seccion-pie">
                <h4>
                    Siguenos
                </h4>
                <span><a href="https://www.facebook.com/?locale=es_LA" target="_blank">Facebook</a></span>
                <span><a href="https://www.instagram.com/" target="_blank">Instagram</a></span>
            </div>
        </div>
        <p style="font-family: fedoca;">© 2024 [TrackU]. Todos los derechos reservados.</p>
    </footer>
</body>

</html>